generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Enums ----------
enum UserRole {
  TRAINEE
  INSTRUCTOR
  ADMIN
  MANAGER
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum EnrollmentStatus {
  ACTIVE
  EXPIRED
  CANCELED
  REFUNDED
  TRIAL
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         UserRole @default(TRAINEE)

  name      String?
  avatarUrl String?
  locale    String?
  timezone  String?

  // Social login (Google)
  googleId            String?  @unique
  googlePicture       String?
  googleEmailVerified Boolean?
  // e.g. "local" | "google" (informational only)
  provider            String?

  isEmailVerified        Boolean   @default(false)
  emailVerifiedAt        DateTime?
  passwordResetToken     String?   @unique
  passwordResetExpiresAt DateTime?

  lastLoginAt      DateTime?
  loginCount       Int       @default(0)
  failedLoginCount Int       @default(0)
  isActive         Boolean   @default(true)
  // Indicates if user currently has any active sessions
  isLoggedIn       Boolean   @default(false)

  // Courses this user teaches
  coursesTaught Course[] @relation("CourseInstructor")

  // Additional co-instructor assignments
  teachingAssignments CourseInstructor[]

  // üîê New: per-device sessions (recommended)
  sessions Session[]

  // ‚úÖ Back relation to Enrollment ‚Äî MUST match the name used on Enrollment.user
  enrollments Enrollment[] @relation("UserEnrollments")

  // Email verification (new)
  verificationTokenHash      String?
  verificationTokenExpiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // store ONLY a hash of the refresh token
  refreshTokenHash String
  // absolute expiry for the RT (e.g., 14d)
  refreshTokenExp  DateTime

  // rotation / revocation
  revokedAt DateTime?
  // optional jti if you embed it into the JWT and want uniqueness
  jti       String?   @unique

  // helpful metadata
  userAgent String?
  device    String?
  ip        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([refreshTokenExp])
}

model Course {
  id           Int     @id @default(autoincrement())
  slug         String  @unique
  title        String
  description  String?
  instructorId Int
  instructor   User    @relation("CourseInstructor", fields: [instructorId], references: [id])

  durationSeconds Int?
  level           CourseLevel?
  language        String?
  thumbnailUrl    String?
  promoUrl        String?
  contentLinks    Json?

  averageRating Decimal? @db.Decimal(3, 2)
  ratingCount   Int      @default(0)

  // Pricing
  price         Float    @default(0)
  discountPrice Float?
  showPrice     Boolean  @default(true)

  isPublished Boolean   @default(false)
  publishedAt DateTime?

  // Highlighting in listings
  isFeatured Boolean @default(false)

  // Ordering in lists
  position   Int @default(0)

  // ‚úÖ Back relation to Enrollment ‚Äî MUST match the name used on Enrollment.course
  enrollments Enrollment[] @relation("CourseEnrollments")

  // Additional instructors (many-to-many via join table)
  instructors CourseInstructor[]

  // Categories (many-to-many via explicit join table)
  categories CourseCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([instructorId])
  @@index([isPublished, publishedAt])
  @@index([position])
}

// Explicit join table for additional course instructors (co-instructors)
model CourseInstructor {
  courseId Int
  userId   Int

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([courseId, userId])
  @@index([userId])
}

model Enrollment {
  id       Int              @id @default(autoincrement())
  userId   Int
  courseId Int
  status   EnrollmentStatus @default(ACTIVE)

  accessFrom  DateTime  @default(now())
  accessUntil DateTime?

  priceCents    Int?
  currency      String?
  orderId       String? @unique
  paymentMethod String?

  progressPct  Decimal?  @db.Decimal(5, 2)
  lastAccessAt DateTime?
  notes        String?

  // ‚úÖ Relation names set here‚Ä¶
  user   User   @relation("UserEnrollments", fields: [userId], references: [id])
  course Course @relation("CourseEnrollments", fields: [courseId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
  @@index([userId, status])
  @@index([courseId, status])
}

// Course categories
model Category {
  id          Int    @id @default(autoincrement())
  name        String
  slug        String  @unique
  description String?
  position    Int     @default(0)

  courses CourseCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name])
}

// Explicit join table for course-category mapping
model CourseCategory {
  courseId  Int
  categoryId Int

  course   Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([courseId, categoryId])
  @@index([categoryId])
}
